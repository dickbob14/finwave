# FinWave Backend Environment Variables

# Database
DATABASE_URL=postgresql://finwave:finwave@localhost:5432/finwave

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.finwave.io
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Development Mode (NEVER use in production)
BYPASS_AUTH=false

# Default Company/Workspace
COMPANY_SLUG=demo-corp

# QuickBooks OAuth
QB_CLIENT_ID=your-qb-client-id
QB_CLIENT_SECRET=your-qb-client-secret
QB_REDIRECT_URI=http://localhost:8000/callback
QB_ENVIRONMENT=sandbox

# CRM Configuration
CRM_TYPE=salesforce

# Salesforce
SF_INSTANCE_URL=https://your-instance.salesforce.com
SF_ACCESS_TOKEN=your-access-token
SF_REFRESH_TOKEN=your-refresh-token
SF_CLIENT_ID=your-client-id
SF_CLIENT_SECRET=your-client-secret

# HubSpot
HUBSPOT_API_KEY=your-api-key
HUBSPOT_ACCESS_TOKEN=your-access-token

# OpenAI (for insights)
OPENAI_API_KEY=your-openai-key

# AWS (optional, for S3 template storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=finwave-templates

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Feature Flags
ENABLE_INSIGHTS=true
ENABLE_PDF_EXPORT=true
ENABLE_SCHEDULER=true

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT_MINUTES=480

# Logging
LOG_LEVEL=INFO
LOG_FILE=backend.log